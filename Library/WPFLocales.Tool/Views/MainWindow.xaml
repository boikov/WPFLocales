<Window x:Class="WPFLocales.Tool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:sampleData="clr-namespace:WPFLocales.Tool.SampleData"
        xmlns:translate="clr-namespace:WPFLocales.Tool.ViewModels.Translate"
        xmlns:views="clr-namespace:WPFLocales.Tool.Views"
        d:DataContext="{d:DesignInstance sampleData:DesignMainViewModel, IsDesignTimeCreatable=true}"
        
        Title="WPFLocales.Tool" Icon="/WPFLocales.Tool;component/icon.ico">

    <Window.Resources>
        <DataTemplate DataType="{x:Type translate:TranslateLocaleViewModel}">
            <views:TranslateLocaleView/>
        </DataTemplate>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Window.Template>
        <ControlTemplate>

            <Grid Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
                <GroupBox Name="SelectModeGrid" 
                          Header="Settings" 
                          HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid Width="450">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                            <RadioButton Name="EditLocaleRadioButton"  Content="Edit default locale" />
                            <RadioButton Name="TranslateLocaleRadioButton"  Content="Translate locale" Margin="10,0,0,0" IsChecked="True"/>
                        </StackPanel>

                        <Grid Grid.Row="1" 
                              Margin="5"
                              Visibility="{Binding ElementName=EditLocaleRadioButton, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" Content="Locale: "/>
                                <TextBox Grid.Column="1"/>
                                <Button Grid.Column="2" Content="..."/>
                            </Grid>

                            <Button Grid.Row="1" 
                                    Content="Edit" HorizontalAlignment="Right" 
                                    Padding="5,0,5,0" Margin="0,5,0,0"/>
                        </Grid>

                        <Grid Grid.Row="1" Visibility="{Binding ElementName=TranslateLocaleRadioButton, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Label Grid.Column="0" Grid.Row="0" Content="Default locale: "/>
                                <TextBox Grid.Column="1" Grid.Row="0" />
                                <Button Grid.Column="2" Grid.Row="0" Content="..."/>

                                <Label Grid.Column="0" Grid.Row="1" Margin="0,5,0,0" Content="New locale: "/>
                                <TextBox Grid.Column="1" Grid.Row="1" Margin="0,5,0,0"/>
                                <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,5,0,0" Orientation="Horizontal">
                                    <Button Content="..."/>
                                    <Button Content="+"/>
                                </StackPanel >
                            </Grid>


                            <Button Grid.Row="2" 
                                    Content="Translate" HorizontalAlignment="Right" 
                                    Padding="5,0,5,0" Margin="0,5,0,0"/>
                        </Grid>
                    </Grid>
                </GroupBox>

                <Grid Name="WorkGrid">
                    <ContentPresenter DataContext="{Binding Work}"/>
                </Grid>
            </Grid>

            <ControlTemplate.Triggers>
                <DataTrigger Binding="{Binding WorkMode}" Value="Select">
                    <Setter TargetName="SelectModeGrid" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="WorkGrid" Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding WorkMode}" Value="Work">
                    <Setter TargetName="SelectModeGrid" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="WorkGrid" Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Template>
</Window>
